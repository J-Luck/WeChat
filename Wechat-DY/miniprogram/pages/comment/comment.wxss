/* pages/comment/comment.wxss */
/*电影——背景图片，虚化效果*/
.detail-container{
  width: 100%;
  height: 400rpx;
  filter: blur(40rpx);/*模糊滤镜*/
  opacity: 0.9;/*透明度*/
}
/* 电影背景的遮罩层 ，显示背景底部 */
.detail-mask{
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0; left: 0;
  background-color: #333;
  z-index: -1;
}
/*电影的详细信息*/
.detail-info{
  display: flex;
  position: absolute;
  top: 0;left: 0;
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
  z-index: 5;
}
/* 电影左侧图片 */
.detail-img{
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx;
}
/*右侧区域*/
.detail{
  flex: 1;/*充满右侧剩余区域*/
  height: 60rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 60rpx;
}
/*得分*/
.detail-sc{
  font-size: 36rpx;
  color: #fc0;
}
/*电影描述*/
.desc{
  padding: 20rpx;
  font-size: 24rpx;
  color: #555;
}


.swiper {
  height: 400rpx;
  width: 100%;
}
.slide-image {
  height: 400rpx;
  width: 100%;
}
/*预览图片*/
.comment-view{
  padding: 20rpx;
}
.comment-img{
  width: 31.6%;
  height: 200rpx;
  padding: 6rpx;
}